<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>register</title>
    <!--AOS-->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"> -->
</head>
<body>
    
    <h1>Register</h1>

    <ul>

        <% if(typeof errors != 'undefined'){%>
            <% errors.forEach(error=>{%>
                <li class="error-color"><%= error.message %></li>
           <% }) %>
            
       <% } %>

    </ul> 

    <div class="register-here">
        <h1>REGISTER</h1>
    </div>

    <form class="form2" action="/users/register" method="POST">
        
        <div class="input_group">
        <div>
            <input class="Username" type="text" id="name" name="name" placeholder="Name" required>
        </div>

        <div>
            <input class="Email" type="email" id="email" name="email" placeholder="Email" required>
        </div>

        <div>
            <input class="Password" type="password" id="password" name="password" placeholder="Password" required>
        </div>

        <div>
            <input class="Password2" type="password" id="password2" name="password2" placeholder="Confirm Password" required>
        </div>

        <div>
            <input class="Continue" type="submit" value="Register">
        </div>

        <a class="link" href="/users/login">Already registered? Login here please!!!</a>
        </div>
    </form>

</body>
</html>